{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/tools/.libs/evemu-play",
      "args": ["/home/noah/Projects/evemu/data/keyboard.evemu"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/tools",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "${workspaceFolder}/src/.libs:${env:LD_LIBRARY_PATH}"
        }
      ],
      "externalConsole": false,
      "miDebuggerPath": "/home/noah/gdb",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        {
          "description": "Allow pending breakpoints for shared libraries",
          "text": "set breakpoint pending on",
          "ignoreFailures": false
        }
      ]
    }
  ]
}
